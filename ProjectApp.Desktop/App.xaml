<Application x:Class="ProjectApp.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ProjectApp.Desktop.ViewModels"
             xmlns:views="clr-namespace:ProjectApp.Desktop.Views">

    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:SchoolSelectionViewModel}">
            <views:SchoolSelectionView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ManagerPanelViewModel}">
            <views:ManagerPanelView />
        </DataTemplate>

    </Application.Resources>
</Application>