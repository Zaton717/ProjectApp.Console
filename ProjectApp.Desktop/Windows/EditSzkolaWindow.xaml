<Window x:Class="ProjectApp.Desktop.Windows.EditSzkolaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja Szkoły" 
        Height="270" Width="400" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="EDYCJA DANYCH" FontWeight="Bold" FontSize="14" Margin="0,0,0,20"/>

            <TextBlock Text="Nazwa Szkoły:"/>
            <TextBox Text="{Binding Nazwa}" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Adres:"/>
            <TextBox Text="{Binding Adres}" Margin="0,5,0,25" Padding="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" Command="{Binding CancelCommand}" Margin="0,0,10,0" Padding="15,5" Height="30"/>
                <Button Content="Zapisz Zmiany" Command="{Binding ConfirmCommand}" Padding="15,5" Height="30" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>