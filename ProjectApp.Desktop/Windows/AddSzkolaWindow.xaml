<Window x:Class="ProjectApp.Desktop.Windows.AddSzkolaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowa Szkoła" 
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="DANE SZKOŁY" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

            <TextBlock Text="Nazwa Szkoły:"/>
            <TextBox Text="{Binding Nazwa}" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Adres (Miasto, Ulica):"/>
            <TextBox Text="{Binding Adres}" Margin="0,5,0,20" Padding="5"/>

            <Separator Margin="0,0,0,20"/>

            <TextBlock Text="DANE MENADŻERA" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

            <TextBlock Text="Imię:"/>
            <TextBox Text="{Binding MenadzerImie}" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Nazwisko:"/>
            <TextBox Text="{Binding MenadzerNazwisko}" Margin="0,5,0,25" Padding="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" Command="{Binding CancelCommand}" Margin="0,0,10,0" Padding="15,5" MinWidth="80"/>
                <Button Content="Zatwierdź" Command="{Binding ConfirmCommand}" Padding="15,5" MinWidth="80" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>